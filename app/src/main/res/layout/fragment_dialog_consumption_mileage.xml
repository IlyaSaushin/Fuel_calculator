<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.consumption.screens.mileage.dialog.ConsMileageDialogFragment">


    <TextView
        android:id="@+id/max_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Расход"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        />

    <TextView
        android:id="@+id/max_distance_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cons_litersOnKm"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/max_distance_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        />

    <TextView
        android:id="@+id/tv_result_added_into_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Результат был добавлен в вашу статистику"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/max_distance_ed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv_result_did_not_added_into_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Результат не был добавлен в вашу статистику"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/max_distance_ed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>