<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/max_distance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_distance"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/max_distance_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_distance_kilometers"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/max_distance_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        />

    <TextView
        android:id="@+id/distance_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="120dp"
        android:text="@string/trip_price"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/max_distance_ed" />

    <TextView
        android:id="@+id/distancePriceEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_price_example"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/distance_price_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        />

    <ImageButton
        android:id="@+id/save_btn_distance"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_save_into_db"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/distancePriceEd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/isSaved_distance"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/isSaved_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сохранено!"
        android:visibility="gone"
        android:textSize="22sp"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="@id/save_btn_distance"
        app:layout_constraintStart_toEndOf="@id/save_btn_distance"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_add_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Введите название"
        android:textSize="22sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/save_btn_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/save_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Москва - Питер"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_add_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/distance_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:textSize="18sp"
        android:visibility="gone"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/save_name"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>