<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/max_distance_tv"
        app:title="Максимальное расстояние"
        app:navigationIcon="@drawable/ic_distance_toolbar"
        android:background="#DCDCDC"
        />

    <TextView
        android:id="@+id/max_distance_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/max_distance"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/max_distance_ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max_distance_kilometers"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/max_distance_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/distance_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        android:text="@string/trip_price"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/max_distance_tv"
        app:layout_constraintTop_toBottomOf="@id/max_distance_ed" />

    <TextView
        android:id="@+id/distancePriceEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general_price_example"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/distance_price_tv"
        app:layout_constraintStart_toStartOf="@id/max_distance_ed"
        android:layout_marginTop="5dp"
        />

    <View
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/distancePriceEd"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>